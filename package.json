        "start": "http-server -p 3004",
        "format": "prettier --write ./src/",
        "lint:css": "stylelint ./src/css/**/*.css --fix",
        "prepare": "husky install",
        "lint": "npm run lint:ts && npm run lint:css && npm run test",
