        "test": "jest"
    },
    "jest": {
        "transform": {
            "^.+\\.(js|ts|tsx)$": "babel-jest",
            "^.+\\.svg$": "<rootDir>/svgTransform.js"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.js?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "repository": {
        "type": "git",
